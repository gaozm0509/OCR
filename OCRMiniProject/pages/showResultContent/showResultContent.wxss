page {
    height: 100%;
    width: 100%;
}

.index_container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.image {
    width: 90%;
    height: 40%;
    margin-top: 20rpx;
}

.textarea {
    width: 88%;
    height: 40%;
    margin-top: 20rpx;
    border: 1px solid #ddd;
    padding: 5px;
    border-radius: 4;
}

.button-hover {
    opacity: 0.8;
}

.button {
    width: 90%;
    background-color: #4edbe6;
    border-radius: 4;
    color: white;
    margin-top: 20rpx;
    font-size: 15px;
}